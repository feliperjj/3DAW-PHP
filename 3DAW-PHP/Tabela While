<?php   

  $nomes = array("Jose","Rodrigo", "Diego","Leticia","Marcelo");
  $x = 0;
  $notas = array(7.5,7.0,7.1,8.0,8.5); 

  ?>
  <!Doctype html>
  <html>
<head>
    <title>Felipe</title>
</head>
  <body>
  <table style = border:solid>
    <tr>
  <th>Nome</th> <th>Nota</th>
    </tr>
  <?php
    $l = count($nomes);
    
   while($x<$l){
    
    
    echo "<tr>  <td> $nomes[$x] </td> <td> $notas[$x]</td> </tr>";
    $x++;
} 
  
 ?>
 </table>
</body>
</html>
